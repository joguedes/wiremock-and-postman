							"\"        \\\"headers\\\": {\"+",
							"\"            \\\"Content-Type\\\": \\\"text/plain\\\"\"+",
							"\"        }\"+",
							"\"    }\"+",
							"\"}\"",
							"",
							"var url = \"localhost:8080/__admin/mappings\"",
							"",
							"console.log(body)",
							"",
							"pm.globals.set(\"value\", myGuid);",
							"",
							"pm.sendRequest({",
							"    url: url,",
							"    method: 'POST',",
							"    body: body",
							"    ",
							"}, function (err, res) {",
